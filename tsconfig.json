{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist"
    },
    "include": ["src"],
    "typedocOptions": {
      "entryPoints": ["./src"],
      "entryPointStrategy": "expand",
      "out": "./_docs",
      "readme": "README.md",
      "projectDocuments": "./docs",
      "theme": "default",
      "plugin": ["typedoc-plugin-mdn-links"],
      "excludeNotDocumented": true,
      "hideGenerator": true,
      "cleanOutputDir": true
    },
    "navigation": {
      "includeCategories": true,
      "includeGroups": true,
      "includeFolders": true,
      "compactFolders": false,
      "excludeReferences": true
    }
  }